<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                creationComplete="onCreationComplete(event)"
                autoDrawBackground="false"
                width="100%">
    <fx:Script><![CDATA[
        import global.Icons;
        import global.Util;

        import mx.events.FlexEvent;

        import ui.RNMeta;

        public var pack:RNPackage;

        private function onCreationComplete(event:FlexEvent):void
        {
        }

        override public function set data(value:Object):void
        {
            if (!value)
                return;

            pack = value as RNPackage;

            validateView();
        }

        private function validateView():void
        {
            buttonName.label = pack.name;
            labelBundles.text = pack.bundles.length + " bundles";
        }
        ]]>
    </fx:Script>

    <s:VGroup width="100%"
              bottom="5">
        <s:Panel width="100%">

            <s:VGroup width="100%">
                <s:ToggleButton id="buttonName"
                                skinClass="skins.buttons.ToggleButtonSkinFullWidth"
                                width="100%"
                />
                <s:Label id="labelBundles"
                         alpha=".6"
                         width="100%" />
            </s:VGroup>

        </s:Panel>
    </s:VGroup>

</s:ItemRenderer>
